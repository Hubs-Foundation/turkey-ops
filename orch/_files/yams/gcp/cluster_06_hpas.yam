apiVersion: autoscaling/v1
kind: HorizontalPodAutoscaler
metadata:
  name: haproxy-hpa
  namespace: ingress
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: haproxy
  minReplicas: 1
  maxReplicas: 50
  targetCPUUtilizationPercentage: 70
